
<%- include('../partials/header') %>

<div class="">
  <div class="card mb-2">
    <div class="card-body">
      <h4 class="card-title"><%= cohorts.name %></h4>
      <p class="card-text"><%= cohorts.members %></p>
      <hr>
      <form>
        <div class="form-group">
          <legend class="form-label" style="font-size: 1rem" >Methods</legend>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1">
            <%# checked="<%= js logic %>" %>
            <label class="form-check-label" for="gridRadios1">
              Team Count
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
            <%# checked="<%= js logic %>" %>
            <label class="form-check-label" for="gridRadios2">
              Number Per Team
            </label>
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword3" class="form-label">Quantity</label>
          <input class="form-control" id="inputPassword3">
          <%# value="<%= js logic %>"%>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-outline-primary btn-block">Assign Teams</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
