<div class="container"
      style="margin-left: 0px; margin-top: 70px">

  <%= form_for @post do |f| %>
    <br>
    <% if @post.errors.present? %>
      <p><%= @post.errors.full_messages.join(', ') %></p>
    <% end %>

    <div>
      <%= f.label :title %> <br>
      <%= f.text_field :title, class: "form-control" %><br>
    </div>

    <div>
      <%= f.label :body %><br>
      <%= f.text_area :body, class: "form-control" %><br>
    </div>

    <%= f.submit class: "btn btn-outline-primary" %>

  <% end %>
</div>
