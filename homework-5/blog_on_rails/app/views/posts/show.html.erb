<h2><%= @post.title %></h2>

<p><%= @post.body %></p>

<div>
  <small>
    Posted
    <%= time_ago_in_words(@post.created_at) %>
    ago
  </small>
</div>


<div>
  <br>
  <%= link_to 'Edit', edit_post_path(@post) %>
  <%= link_to 'Delete', post_path(@post),
    method: :delete,
    data: {
      confirm: 'Are you sure?'
    }
  %>
</div>
