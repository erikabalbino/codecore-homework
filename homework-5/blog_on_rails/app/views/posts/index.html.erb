
<% @posts.each do |post| %>
  <div class="container1"
    style="margin-top: 20px">
    <div class="container2"
      style="margin-left: 10px;
      margin-right: 15px;
      margin-bottom: 10px;
      padding: 20px;
      border: solid 1px #ddd;
      border-radius: 4px;
      float:left;
      width: 300px;
      height: 100px" >

      <div class="" style="font-size: large">
        <%= link_to post.title, post_path(post) %> <br>
      </div>

      <div class=""
        style="font-size: small;
          margin-top: 10px;
          width: 95%;
          white-space: nowrap;
          text-overflow: ellipsis;
          overflow: hidden">
        <%= post.body %>
      </div>

    </div>
  </div>
<% end %>
