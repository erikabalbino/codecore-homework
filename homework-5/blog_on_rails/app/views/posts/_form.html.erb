
<%= form_for @post do |f| %>

  <% if @post.errors.present? %>
    <p><%= @post.errors.full_messages.join(', ') %></p>
  <% end %>

  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title, class: "form-control" %><br><br>
  </div>

  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control" %><br><br>
  </div>

  <%= f.submit %>
<% end %>
